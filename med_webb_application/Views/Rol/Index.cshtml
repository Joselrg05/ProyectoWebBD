@model List<med_webb_CapaDato.Modelado.Rol>

@{
    ViewBag.Title = "Index";
    string descripcion = "Roles";
    int i = 0;
}

<br>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="text-center"><strong>@descripcion</strong></h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ActionLink("+ Agregar", "Crear", "Rol", htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr class="success">
                            <th class="text-center">#</th>
                            <th class="text-center">Id</th>
                            <th class="text-center">Nombre del Rol</th>
                            <th class="text-center">Descripción del Rol</th>
                            <th class="text-center">Fecha de Creación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><strong>@i</strong></td>
                                <td>@item.Id</td>
                                <td>@item.nombre_rol</td>
                                <td>@item.fecha_rol</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        @Html.ActionLink(" ", "Editar", "Rol", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-edit" })
                                        @Html.ActionLink(" ", "Eliminar", "Rol", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>